<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;

        }
        .filters{
            text-align: center;
            margin-right: 2rem;
            margin-top: 1rem;
            opacity: 0.7;
        }
        .filters:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filters p{
            font-size: 0.8rem;
        }
        .filters a{
            text-decoration: none;
        }
        .filters i {
        color: black; /* This ensures it takes the original default color */
        }

        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            padding: 1rem;
            margin-left: 8rem;
            display: flex;
            align-items: center;

        }
        @media (max-width: 768px) {
         .filters {
        margin-right: 1rem;
        font-size: 0.7rem; 
        }
        .tax-toggle {
        margin-left: 1rem;
        }
        }
        @media (max-width: 576px) {
        .filters i {
         font-size: 1rem; /* Reduce icon size on mobile */
        }
        }
    </style>
</head>
<body>
     <div id="filters">
        <div class="filters">
            
            <a href="/listings?category=Trending">
            <div><i class="fa-solid fa-fire"></i></div>
            </a>
            <p>Trending</p>
            
        </div>
        <div class="filters">
            <a href="/listings?category=Rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            </a>
            <p>Rooms</p>
        </div>

        <div class="filters">
            <a href="/listings?category=Iconic Cities">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            </a>
            <p>Iconic Cities</p>
        
        </div>
        <div class="filters">
            <a href="/listings?category=Mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            </a>
            <p>Mountains</p>
        </div>
        <div class="filters">
            <a href="/listings?category=Castles">
            <div><i class="fa-solid fa-chess-rook"></i></div>
            </a>
            <p>Castles</p>
        </div>
        <div class="filters">
            <a href="/listings?category=Amazing Pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            </a>
            <p>Amazing Pools</p>
        </div>
        <div class="filters">
            <a href="/listings?category=Camping">
            <div><i class="fa-solid fa-campground"></i></div>
            </a>
            <p>Camping</p>
        </div>
        <div class="filters">
            <a href="/listings?category=Farms">
            <div><i class="fa-solid fa-cow" data-category="farms"></i></div>
            </a>
            <p>Farms</p>
        </div>
        <div class="filters">
            <a href="/listings?category=Arctic">
            <div><i class="fa-solid fa-snowflake" data-category="Arctic"></i></div>
            </a>
            <p>Arctic</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input " type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>  

        </div>
  
     </div>
     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
        <%for(list of key){%>

            <div class="card col">
                <a href="/listings/<%= list._id %>" class="card-link">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="Litsing image" style="height: 20rem"/>
                    <div class="card-img-overlay">
                    </div>
    
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= list.title %><br/></b>
                        &#8377 <%= list.price.toLocaleString("en-IN") %> /night
                        <i class="tax-info"> &nbsp;&nbsp;+18% GST </i>
            
                    </p>
                      
                    </div>
                </a>

            </div>
        <%}%>
    </div> 
    <script>
        let txaSwitch=document.getElementById("flexSwitchCheckDefault")
        txaSwitch.addEventListener("click",()=>{
            let taxInfo=document.getElementsByClassName("tax-info")
            for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }

        })
    </script>
        
    
</body>
</html>






